@using WebApplicationGym.Models.Register
@model Register

@{
    ViewData["Title"] = "UserGym";
}
<head>
<link rel="stylesheet" href="~/css/UserGymCSS.css" type="text/css">
</head>
@{
    var message = ViewBag.SuccessMessage;
    if (!string.IsNullOrEmpty(message))
    {
        <div class="alert alert-success">
        @message
        </div>
    }
}


@using (Html.BeginForm("UserGym", "UserGym", FormMethod.Post, new { @class = "formularz" }))
{
    <div class="formularz">
        <h1>Dodaj użytkownika</h1>
        <div class="pole">
         
        </div>
    </div>
    @Html.ValidationSummary()

    <div class="pole">
        <span>Imię</span>@Html.TextBoxFor(x => x.Name)
    </div>
    <div class="pole">
        <span>Nazwisko:</span> @Html.TextBoxFor(x => x.Surname)
    </div>
    <div class="pole">
        <span>Hasło</span>@Html.PasswordFor(x => x.Password)
    </div>
    
    <div class="pole">
        <span>Email:</span> @Html.TextBoxFor(x => x.Email)
    </div>
    <div class="pole">
        <span>Address:</span> @Html.TextBoxFor(x => x.Address)
    </div>

    <div class="pole">
        <button type="submit">Dodaj</button>
    </div>

}



